	<!-- Bridge to build on vacuum -->
	<TerrainDef>
		<defName>RimNauts2_Vacuum_Platform</defName>
		<label>Platform</label>
		<description>Supportive beams which can be built over vacuum.</description>
		<texturePath>Terrain/Surfaces/RimNauts2_Vacuum_Platform</texturePath>
		<uiIconPath>Terrain/Surfaces/RimNauts2_Vacuum_Platform_Icon</uiIconPath>
		<layerable>true</layerable>
		<bridge>true</bridge>
		<affordances>
			<li>Light</li>
			<li>Medium</li>
			<li>Heavy</li>
		</affordances>
		<fertility>0</fertility>
		<constructEffect>ConstructMetal</constructEffect>
		<terrainAffordanceNeeded>RimNauts2_Vacuum_Affordance</terrainAffordanceNeeded>
